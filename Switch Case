import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        

        
        char continuar;
        
        do {
        System.out.println("Digite um numero de 1 a 7:");
        
        int numero = sc.nextInt();
        
            switch (numero){
                case 1:
                    System.out.println("Dia da semana:Domingo ");
                    break;
                case 2:
                    System.out.println("Dia da semana:Segunda-feira");
                    break;
                case 3:
                    System.out.println("Dia da semana:Terça-feira");
                    break;
                case 4:
                    System.out.println("Dia da semana:Quarta-feira");
                    break;
                case 5:
                    System.out.println("Dia da semana:Quinta-feira");
                    break;
                case 6:
                    System.out.println("Dia da semana:Sexta-feira");
                    break;
                case 7:
                    System.out.println("Dia da semana:Sábado");
                    break;
                default:
                    System.out.println("Dia da semana: inválido. Por favor, insira um número de 1 a 7.");
                    break;
            }
                System.out.println("Deseja verificar outro dia da semana? (s/n)");
            continuar = sc.next().charAt(0);
                    } while (continuar == 's' || continuar == 'S');
        }
    }


